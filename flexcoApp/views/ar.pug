// /////////////////////////////// Modal ///////////////////////////////////////////
#successModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='successModal' aria-hidden='true')
  .modal-dialog.modal-dialog-centered(role='document')
    .modal-content
      .modal-header
        h5#exampleModalLongTitle.modal-title Share Experience
        button.close(type='button' data-dismiss='modal') &times;
      .modal-body
        center
          // <h5 class="modal-title" style="font-weight: bold" id="exampleModalLongTitle">interrior workspace</h5><br>
          p
            | Open mobile application
            br
            | use QR scan mode to view Experience
          #qrcode
          input#experience_url.copyinput(type='text' value='https://catalog.mindwox.com/projects')
          i.material-icons.icon(onclick='copyURL()') insert_drive_file
          br
          hr
// /////////////////////////////// Modal ///////////////////////////////////////////
.wrapper.d-flex
  .content
    // -////////////////////////////////////////////third slide start/////////////////////////////////////////////////
    main#third-slide.arform
      .container-fluid
        .row
          .col
            .form-headings
              h3.headingtxt
                span Upload Files to
                | &nbsp; #{title.toUpperCase()}
              // <p style="text-align:center; margin:20px;">Lorem Ipsum is simply dummy text of the printing and typesetting industry Lorem Ipsum</p>
        .row.slide-centering
          .col-sm-4.order-sm-1.bgform
            form#content-form(action='/file' method='post' enctype='multipart/form-data')
              #error_field(name='error_field' style='font-size:15px; color:red; margin-top:0px; text-align: center;white-space:normal;')
              #progress-div
                #progress-bar
              // <div>
              span(style='padding-right:20px;') Choose Upload Type 
              .btn-group(role='group' aria-label='Basic example' name='uploadtype')
              button.btn.FileButton#FileButtonClick(type='button' value="File") File
              button.btn.URLButton#URLButtonClick(type='button' ) URL          
              input#title.form-control(type='name' name='filename' data-toggle='tooltip' title='Enter your filename' placeholder='File Name' required='required' maxlength='20' style='margin-top:15px')
              span(style='padding-right:20px;') Choose Category
              select.DropdownBTN( name='category', id='category' title='Enter your file category')
                each category in categories
                  option=category.name
              br
              br
              input#url.form-control(type='name' name='url' data-toggle='tooltip' title='Enter your url' placeholder='URL' required='required' maxlength='200')
              //- <input type="file" name="fileupload" value="fileupload" id="fileupload">
              //- input(type='hidden' name="project" value=`${title}`)
              #dropFile.upload-btn-wrapper
                button.btn.btnn
                  i.material-icons.icon backup
                  | Upload
                // <div class="status"><p>Marker formats JPEG & PNG</p></div>
                #status
                  p
                    | Drag  pdf and mp4
                    br
                    |  (Max file size 50MB)
                input#modelfiles(type='file' name='fileUpload' value='fileupload' onchange="validateExperienceFile('modelfiles')" accept='.mp4 , .pdf')
              //- p.youtubestatus or Upload a youtube video link
              //- input#title.form-control(type='name' name='title' data-toggle='tooltip' title='Paste your youtube video link' placeholder='https://youtu.be/OQL-m4tOBow' required='required' maxlength='20' display='none')
              // </div>

              input#experienceSubType(type='hidden' name='uuid' value=`${uuid}`)
        .row
          .btnalignment
            td
              button#content-form-submit.form-submit(type='submit') Create
              nobr
                button.form-back(type='reset') Reset
    // -////////////////////////////////////////////third slide over/////////////////////////////////////////////////
    include footer.pug
