    }
    iframe {
    border-radius: 25px;
    width: 450px;
    height: 265px;
    }
    .footer {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    text-align: center;
    }
    @media (min-width: 360px) and (max-width: 1199.98px) {
